<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sky"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/Setting"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_button"
        android:drawableEnd="@drawable/ic_settings_black_24dp"
        android:drawableRight="@drawable/ic_settings_black_24dp" />

    <Button
        android:id="@+id/exit"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_button"
        android:drawableEnd="@drawable/ic_exit_to_app_black_24dp"
        android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
        android:padding="3dp" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="@string/kalmado"
        android:textSize="50sp"
        android:visibility="visible"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_marginTop="12dp"
        android:text="Welcome back"
        android:textSize="30sp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/testHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relax"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_mood_black_24dp"
        android:text="@string/button"
        android:textSize="10sp"
        tools:text="How are you?" />

    <Button
        android:id="@+id/relax"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_pan_tool_black_24dp"
        android:text="     Relax"
        android:textSize="10sp" />

    <Button
        android:id="@+id/data"
        android:layout_width="96dp"
        android:layout_height="102dp"
        android:layout_below="@+id/testHomeButton"
        android:layout_marginTop="52dp"
        android:background="@drawable/circle_button"
        android:drawableEnd="@drawable/ic_accessibility_black_24dp"
        android:drawableRight="@drawable/ic_accessibility_black_24dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>